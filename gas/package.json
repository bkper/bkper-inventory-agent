{
  "scripts": {
    "login": "clasp --cwd ./server/src login",
    "open": "clasp --cwd ./server/src open",
    "pull": "clasp --cwd ./server/src pull",
    "prepush": "yarn --cwd ../../ clasp:activate",
    "upgrade": "upgrade:*",
    "upgrade:server": "yarn --cwd ./server/src upgrade",
    "watch": "run-p watch:server watch:client",
    "watch:server": "yarn --cwd ./server/src push --watch --force",
    "watch:client": "watch 'yarn copyfiles -f client/src/*.html server/src' ./client/src"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "watch": "^1.0.2",
    "copyfiles": "^2.1.1"
  }
}